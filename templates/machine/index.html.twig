{% extends 'base.html.twig' %}

{% block title %}Machine index{% endblock %}

{% block body %}
    <h1>Machine index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>CreatedAt</th>
                <th>CreatedBy</th>
                <th>UpdatedAt</th>
                <th>UpdatedBy</th>
                <th>IsActive</th>
                <th>Name</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for machine in machines %}
            <tr>
                <td>{{ machine.id }}</td>
                <td>{{ machine.createdAt ? machine.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ machine.createdBy }}</td>
                <td>{{ machine.updatedAt ? machine.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ machine.updatedBy }}</td>
                <td>{{ machine.isActive ? 'Yes' : 'No' }}</td>
                <td>{{ machine.name }}</td>
                <td>
                    <a href="{{ path('app_machine_show', {'id': machine.id}) }}">show</a>
                    <a href="{{ path('app_machine_edit', {'id': machine.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_machine_new') }}">Create new</a>
{% endblock %}
